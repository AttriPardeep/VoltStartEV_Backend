# Server Configuration
NODE_ENV=production
PORT=3000
API_BASE_URL=http://136.113.7.146:3000

# SteVe MySQL Database (Your Primary VM)
STEVE_DB_HOST=136.113.7.146
STEVE_DB_PORT=3306
STEVE_DB_NAME=stevedb
STEVE_DB_USER=voltstart_backend
STEVE_DB_PASS=your_secure_password_here

# JWT Authentication
JWT_SECRET=change_this_to_a_very_long_random_string_min_32_chars
JWT_EXPIRES_IN=7d

# OTP Configuration
OTP_EXPIRY_MINUTES=5
OTP_LENGTH=4

# WebSocket
WS_PORT=3001
WS_PATH=/ws/charging

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/voltstartev/backend.log

# Payment (Razorpay - India)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Allowed Origins (Your Frontend URL)
CORS_ORIGIN=https://your-frontend-domain.com
